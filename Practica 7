Proceso FormarPalabra
    Definir letras Como Caracter;
    Definir palabra Como Caracteres;
    Definir palabraCorrecta Como Caracteres;
	
    // Letras mezcladas
    letras <- "asbnaa"; // Letras mezcladas para la palabra "apoplejía"
    
    // Palabra correcta que debe ser formada
    palabraCorrecta <- "sabana";
    
    // Solicitar al jugador que forme una palabra
    Escribir "Forme una palabra con las siguientes letras: ", letras;
    Leer palabra;
    
    // Verificar si la palabra formada es correcta
    Si palabra = palabraCorrecta Entonces
        Escribir "¡Correcto! Has formado la palabra correctamente.";
    Sino
        Escribir "Incorrecto. La palabra correcta es: ", palabraCorrecta;
    FinSi;
FinProceso
